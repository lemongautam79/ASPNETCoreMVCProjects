@model ASPNETCoreMVCProjects.Controllers.ProductViewModel;

@{
    ViewData["Title"] = "Create Product";
}

<h2> Create Products</h2>

<!-- Form to submit Product data -->
<form asp-action="Create" method="post" style="max-width: 400px;">
    <div class="form-row">
        <label asp-for="Product.Id"></label>
        <input asp-for="Product.Id" />
        <!-- Validation message -->
        <span asp-validation-for="Product.Id" class="text-danger"></span>
    </div>
    <div class="form-row">
        <label asp-for="Product.ProductName"></label>
        <input asp-for="Product.ProductName" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>
    <div class="form-row">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    <div class="form-row">
        <label asp-for="Product.Quantity"></label>
        <input asp-for="Product.Quantity" />
        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
    </div>
    <div style="margin-top: 10px;">
        <button type="submit">Submit</button>
    </div>
</form>

<!-- Summary of validation errors -->
<div asp-validation-summary="All" class="text-danger"></div>

<!--Diplay submitted products in a table-->
@if (Model.Products.Any())
{
    <h2>All Submitted Products</h2>
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                // Highlight the latest submitted Product
                var highlight = product.Id == Model.LatestProductId ? "background-color: #d4edda;" : "";
                <tr class="@(product.Id == Model.LatestProductId ? "table-success" : "")" style="@highlight">
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@(product.Price* product.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><strong>Total Inventory Value:</strong></td>
                <td><strong>@Model.TotalInventoryValue</strong></td>
            </tr>
        </tfoot>
    </table>
}