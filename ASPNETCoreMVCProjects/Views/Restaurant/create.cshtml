@model ASPNETCoreMVCProjects.Controllers.RestaurantViewModel
@{
    ViewData["Title"] = "Create Restaurant";
}
<h2>Create Restaurant</h2>
<form asp-action="Create" method="post" style="max-width: 400px;">
    <div class="form-row">
        <label asp-for="Restaurant.Id"></label>
        <input asp-for="Restaurant.Id" />
        <span asp-validation-for="Restaurant.Id" class="text-danger"></span>
    </div>
    <div class="form-row">
        <label asp-for="Restaurant.CustomerName"></label>
        <input asp-for="Restaurant.CustomerName" />
        <span asp-validation-for="Restaurant.CustomerName" class="text-danger"></span>
    </div>
    <div class="form-row">
        <label asp-for="Restaurant.FoodItemName"></label>
        <input asp-for="Restaurant.FoodItemName" />
        <span asp-validation-for="Restaurant.FoodItemName" class="text-danger"></span>
    </div>
    <div class="form-row">
        <label asp-for="Restaurant.Quantity"></label>
        <input asp-for="Restaurant.Quantity" />
        <span asp-validation-for="Restaurant.Quantity" class="text-danger"></span>
    </div>
    <div class="form-row">
        <label asp-for="Restaurant.Price"></label>
        <input asp-for="Restaurant.Price" />
        <span asp-validation-for="Restaurant.Price" class="text-danger"></span>
    </div>
    <div style="margin-top: 10px;">
        <button type="submit">Submit</button>
    </div>
</form>

<!-- Summary of validation errors -->
<div asp-validation-summary="All" class="text-danger"></div>

<!--Diplay submitted orders in a table-->
@if (Model.Restaurants.Any())
{
    <h2>All Submitted Restaurants</h2>
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Food Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model.Restaurants)
            {
                <tr>
                    <td>@restaurant.Id</td>
                    <td>@restaurant.CustomerName</td>
                    <td>@restaurant.FoodItemName</td>
                    <td>@restaurant.Quantity</td>
                    <td>@restaurant.Price.ToString("C")</td>
                    <td>@((restaurant.Quantity * restaurant.Price).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
}