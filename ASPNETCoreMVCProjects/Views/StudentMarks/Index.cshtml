@model IEnumerable<ASPNETCoreMVCProjects.Models.StudentMarks>

@{
    ViewData["Title"] = "Student Marks";
    int highestMark = ViewBag.Highest ?? 0;   // safe assignment
    Console.WriteLine(highestMark);
}

<h2>Student Marks</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Marks</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>StudentId</th>
            <th>Name</th>
            <th>Subject</th>
            <th>Marks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr class="@(s.Marks == highestMark ? "table-success" : "")">
                <td>@s.StudentId</td>
                <td>@s.Name</td>
                <td>@s.Subject</td>
                <td>@s.Marks</td>
            </tr>
        }
    </tbody>
</table>
