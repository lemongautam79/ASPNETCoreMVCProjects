@model IEnumerable<ASPNETCoreMVCProjects.Models.StudentMarks>

@{
    ViewData["Title"] = "Student Marks";
}

<h2>Student Marks</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Marks</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>StudentId</th>
            <th>Name</th>
            <th>Subject</th>
            <th>Marks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentId</td>
                <td>@s.Name</td>
                <td>@s.Subject</td>
                <td class="@(s.Marks == (int)ViewBag.Highest ? "table-success fw-bold" : "")">
                    @s.Marks
                </td>
            </tr>
        }
    </tbody>
</table>
