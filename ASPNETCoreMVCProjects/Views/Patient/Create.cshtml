@model ASPNETCoreMVCProjects.Controllers.PatientViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Register Patient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient.Id" class="control-label"></label>
                <input asp-for="Patient.Id" class="form-control" />
                <span asp-validation-for="Patient.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Name" class="control-label"></label>
                <input asp-for="Patient.Name" class="form-control" />
                <span asp-validation-for="Patient.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Age" class="control-label"></label>
                <input asp-for="Patient.Age" class="form-control" />
                <span asp-validation-for="Patient.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Disease" class="control-label"></label>
                <input asp-for="Patient.Disease" class="form-control" />
                <span asp-validation-for="Patient.Disease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Summary of validation errors -->
<div asp-validation-summary="All" class="text-danger"></div>

<!-- Display submitted Patients in a table -->
@if (Model.Patients.Any())
{
    <h2>All Submitted Patients</h2>
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Patient Name</th>
                <th>Age</th>
                <th>Disease</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Patient in Model.Patients)
            {
                // Highlight the latest submitted Patient
                var highlight = Patient.Id == Model.LatestPatientId ? "background-color: #d4edda;" : "";
                <tr style="@highlight">
                    <td>@Patient.Id</td>
                    <td>@Patient.Name</td>
                    <td>@Patient.Age</td>
                    <td>@Patient.Disease</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Total patients: @Model.Patients.Count()</h2>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
